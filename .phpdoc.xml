<?xml version="1.0" encoding="UTF-8" ?>
<phpdocumentor>
    <title>Datapump API</title>
    <parser>
        <target>build/documentation</target>
    </parser>
    <transformer>
        <target>build/documentation</target>
    </transformer>
    <files>
        <directory>src/Datapump</directory>
        <ignore>src/Datapump/Tests/*</ignore>
    </files>
    <transformations>
        <template name="new-black"/>
    </transformations>
    <logging>
        <level>warn</level>
        <paths>
            <default>build/logs/{DATE}.log</default>
            <errors>build/logs/{DATE}.errors.log</errors>
        </paths>
    </logging>
</phpdocumentor>